<div class="container">
  <div class="view-head-wrap">
    <div class="row">
      <div class="col-md-6 my-2">
        <h1 class="text-center"><%= title.split('|')[1].toUpperCase() %></h1>
      </div>
      <div class="col-md-6 my-2">
        <input
          type="text"
          name="keyword"
          id="keyword"
          class="form-control w-50 float-start"
          placeholder="Type here to search the data..."
        />
        <input
          type="button"
          value="Search"
          id="search"
          class="btn btn-secondary float-end"
          onclick="searchTable()"
        />
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-light my-5">
      <thead>
        <!-- Table Heading for each column -->
        <tr>
          <th scope="col">S.No</th>
          <% if(header.length > 0) { header.forEach((head,index)=> { %>
          <th scope="col"><%= head %></th>
          <% }); } %>
        </tr>
      </thead>
      <tbody id="bug-list">
        <!-- To display the list of the bugs -->
        <% if(data.length > 0) { data.forEach((row,index)=> { let rowKeys =
        Object.keys(row); %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <% rowKeys.forEach((col)=>{ %>
          <td><%= row[col] %></td>
          <% }); %>
        </tr>
        <% }); }else{ %>
        <tr>
          <td colspan="5">
            <p class="text-center">No Issues Found</p>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
